
<h2>Sign Up</h2>


<%= form_tag users_path, :class => 'form' do %>
  <%= label :user, :email, 'Name', :class => 'col-form-label' %>
  <%= text_field :user, :name, :class => 'form-control' %>
  <%= label :user, :username, 'Username', :class => 'col-form-label' %>
  <%= text_field :user, :username, :class => 'form-control' %>
  <%= label :user, :password, 'Password', :class => 'col-form-label' %>
  <%= text_field :user, :password, :class => 'form-control' %>

  <br/>
  <%= submit_tag 'Sign Up', :class => 'btn btn-primary' %>
  <%= link_to 'Cancel', new_session_path, :class => 'btn btn-secondary' %>
<% end %>
