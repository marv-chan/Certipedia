<h2><%= @certificate.name %> </h2>
<br>
<ul id="details">
  <li>
     <h5>School: </h5> <%= @certificate.school %>

  </li>
  <br>
  <li>
    <h5>Subject: </h5>
    <p id="description">
    <%= @certificate.subject %>
    </p>
  </li>

  <li>
    <h5>Program Website: </h5>
    <p id="description">
    <a href=<%= @certificate.website %>><%= @certificate.website %></a>
    </p>
  </li>

  <li>
    <h5>Learn More About the School: </h5>
    <p id="description">
    <a href=<%= @certificate.origin %>><%= @certificate.origin %></a>
    </p>
  </li>

  <li>
  <% if @bookmarked %>
    <h5>Bookmarked!</h5>
    <%= button_to 'Unbookmark', bookmark_path(@certificate), :method => 'delete', :class => 'btn btn-dark' %>
  <% else %>
    <%= form_tag bookmarks_path, :class => 'form' do %>
      <%= text_field :bookmarks, :certificate_id, :class => 'form-control', :value =>"#{@certificate.id}", :type => 'hidden' %>
      <%= submit_tag 'Add to Bookmarks', :class => 'btn btn-dark' %>
    <% end %>
  <% end %>
  </li>

  <p> </p>


    <% if session[:admin] == true %>
      <li>
        <p id="delete">
        <%=  link_to "Delete Certificate", certificate_path(@certificate.id), method: :delete,:class => 'btn btn-primary' %>
        </p>
      </li>
    <% end %>


</ul>
