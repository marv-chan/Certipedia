<h2><%= @certificate.name %> </h2>
<br>
<ul id="details">
  <li>
     <h5>School: </h5> <%= @certificate.school %>

  </li>
  <br>
  <li>
    <h5>Program: </h5>
    <p id="description">
    <%= @certificate.subject %>
    </p>
  </li>

  <li>
    <h5>Program Website: </h5>
    <p id="description">
    <a href=<%= @certificate.website %>><%= @certificate.website %></a>
    </p>
  </li>

  <li>
    <h5>Learn More About the School: </h5>
    <p id="description">
    <a href=<%= @certificate.origin %>><%= @certificate.origin %></a>
    </p>
  </li>

  <li>
    <h5>Add to Bookmarks </h5>
    <p id="bookmarks">
    <%= link_to 'Create Bookmark', new_bookmark_path(:certificate_id => @certificate.id), :class => 'btn btn-dark', remote: true %>
    </p>
  </li>


</ul>
